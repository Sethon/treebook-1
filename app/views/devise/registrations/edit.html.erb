<div class="row">
  <div class="span6">
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => "well" }) do |f| %>
  <%= devise_error_messages! %>

  <fieldset>
    <legend>Edit <%= resource_name.to_s.humanize %></legend>
  
    <%= f.input :email %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <%= f.input :password, :autocomplete => "off" %>
    <%= f.input :password_confirmation, :autocomplete => "off" %>
    <%= f.input :current_password %>

  <div><%= f.button :submit, "Update" %></div>

</fieldset>
</div>
<fieldset>


<div class="span6 pull-right">

<legend><strong>Cancel my account</legend>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %></p>

<% end %>

</div>
</div>
<%= link_to "Back", :back %>
